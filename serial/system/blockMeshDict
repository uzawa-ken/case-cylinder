        type patch;
        faces
        (
            (0 1 5 4)
        );
    }

    yp
    {
        type patch;
        faces
        (
            (2 3 7 6)
        );
    }

    zm
    {
        type patch;
        faces
        (
            (0 1 3 2)
        );
    }

    zp
    {
        type patch;
        faces
        (
            (4 5 7 6)
        );
    }
